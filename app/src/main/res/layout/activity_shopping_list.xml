<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShoppingListActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/RV_Item"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/user_name"
        app:layout_constraintTop_toTopOf="parent"
        tools:liststitem="@layout/layout_shopping" />

    <TextView
        android:id="@+id/user_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="16dp"
        android:onClick="openDebtActivity"
        android:clickable="true"
        app:layout_constraintBottom_toTopOf="@+id/task_btn"
        app:layout_constraintEnd_toStartOf="@+id/user_debt"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/user_debt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:onClick="openDebtActivity"
        android:clickable="true"
        app:layout_constraintBottom_toTopOf="@+id/task_btn"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/task_btn"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:background="?attr/colorPrimary"
        android:text="Go to TaskList"
        android:textAppearance="@style/TextAppearance.AppCompat.Inverse"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>